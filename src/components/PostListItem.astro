---
export interface Props {
  post: {
    url: string;
    title: string;
    description: string;
    author: string;
    date: string;
    category: string;
    imageUrl: string;
  };
}

const { post } = Astro.props;
---

<a
  href={post.url}
  class="group grid md:grid-cols-[1fr_240px] gap-8 items-center"
>
  <div>
    <h2 class="text-2xl font-bold group-hover:text-blue-600 transition-colors">
      {post.title}
    </h2>
    <p class="text-gray-600 mt-2">{post.description}</p>
    <div class="text-sm text-gray-500 mt-4">
      <span>{post.date}</span>
      <span class="mx-2">Â·</span>
      <span>{post.author}</span>
    </div>
  </div>
  <div class="w-full h-40 bg-gray-100 rounded-lg overflow-hidden">
    <img
      src={post.imageUrl}
      alt={post.title}
      class="w-full h-full object-cover"
    />
  </div>
</a> 